<h1>Editing Photo #<%= @photo.id %></h1>


<%= form_tag(photo_url(@photo), method: 'put') do %>

  <div>
    <%= label_tag :description %><br />
    <%= text_field_tag :description, @photo.description %>
  </div>

  <div>
    <%= label_tag :approved %><br />
    <%= check_box_tag :approved, @photo.approved? %>
  </div>

  <div>
    <%= label_tag :user_id %><br />
    <%= number_field_tag :user_id, @photo.user_id %>
  </div>

  
  <div>
    <%= submit_tag "Update Photo" %>
  </div>

<% end %>
